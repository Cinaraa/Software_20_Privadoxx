<div class="container mt-5">
    <div class="row">
        <div><p><strong><i>Author: </i></strong><%= review.author %></p></div>
        <div><p><strong><i>Rating: </i></strong><%= review.rating %></p></div>
        <div><p><strong><i>Content: </i></strong><%= review.content %></p></div>
        <div>
            <% if current_user.role == 'moderator' %>
                <%= link_to "Delete", publication_review_path(review.publication_id, review.id), method: :delete, data: { confirm: "Are you sure?"} %>
                <%= link_to 'Edit', edit_publication_review_path(review.publication_id, review.id) %>
            <% end %>
        </div>
    </div>
</div>


