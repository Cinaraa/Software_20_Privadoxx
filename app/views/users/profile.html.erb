<div class="container mt-5">
    <div class="row">
        <div class="col-4">
            <%= image_tag(@user.profilepic, style:"width: 150px; height: 150px; border-radius: 100%") if @user.profilepic.attached? %>
        </div> 
        <div class="col-8">
            <h1><%= @user.name %></h1>
            <h6>
                <%= @user.email %> |
                <%= @user.phone %>
            </h6>
        </div>
    </div>
    <p>Find me in app/views/users/profile.html.erb</p>
</div>


